{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Gera os arquivos compilados na pasta dist
    "rootDir": "./src"  // Define a pasta raiz para os arquivos TypeScript
  },
  "include": ["src/**/*"], // Inclui todos os arquivos dentro de src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
