{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "jest",
      "node"
    ],
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}